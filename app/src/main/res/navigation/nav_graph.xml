<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.productcatalogue.ui.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editProductFragment"
            app:destination="@id/editProductFragment" />

    </fragment>
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.example.productcatalogue.ui.presentation.product.AddProductsFragment"
        android:label="ProductsFragment" />
    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.example.productcatalogue.ui.presentation.product.EditProductFragment"
        android:label="EditProductFragment">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>


</navigation>